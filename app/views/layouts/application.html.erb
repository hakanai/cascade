<html>
  <head>
    <title>Cascade</title>
    <%= stylesheet_link_tag 'application', :media => 'all' %>
    <%= yield(:scripts) %>
  </head>
  <body>
    <% if flash[:error] -%>
    <div class="error"><p><%=h flash[:error] %></p></div>
    <% end -%>

    <%= yield %>
    
    <div class="actions">
      <%= link_to 'Latest', posts_path %>
      <% if logged_in? -%>
        <%= link_to 'New Post', new_post_path %>
        <%= link_to 'Logout', logout_path, :method => :delete %>
      <% else -%>
        <%= link_to 'Login', login_path %>
      <% end -%>
    </div>
  </body>
</html>
